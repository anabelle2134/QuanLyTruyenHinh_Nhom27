<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:id="@+id/imgHinh"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:padding="5dp"-->
<!--            app:srcCompat="@drawable/pic123" />-->

        <TextView
            android:id="@+id/TenCT"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:inputType="textPersonName"
            android:text="Tên Chương Trình"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/danhmucsua"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/MaCT"
            app:srcCompat="@mipmap/img_edit" />

        <TextView
            android:id="@+id/MaCT"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/TenCT"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Mã Chương Trình"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/danhmucxoa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/danhmucsua"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/MaTheLoai"
            android:backgroundTint="#2196F3"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/MaTheLoai"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/MaCT"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Mã Thể Loại"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>