<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/outline_button"
            android:gravity="center"
            android:padding="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã BTV"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/maBTV_TCTdialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:tooltipText="Mã BTV" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên BTV"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tenBTV_TCTdialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:tooltipText="Tên BTV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/diachiBTV_TCTdialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:tooltipText="Địa chỉ" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sinh"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/namsinh_TCTdialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:tooltipText="Năm sinh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sdt_TCTdialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:tooltipText="SĐT" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>