<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:paddingLeft="@android:dimen/app_icon_size"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/btnTheLoai"
        android:background="@drawable/custom_button"
        android:text="DANH MỤC THỂ LOẠI"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/btnBienTapVien"
        android:background="@drawable/custom_button"
        android:text="BIÊN TẬP VIÊN"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/btnxemDanhMucCT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_button"
        android:text="DANH MỤC CHƯƠNG TRÌNH"
        android:textColor="#ffffff"
        />
    <Button
        android:layout_width="300dp"
        android:id="@+id/btnThongTinPhatSong"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:text="THÔNG TIN PHÁT SÓNG"
        android:textColor="#ffffff"
        />

    <Button
        android:id="@+id/btninbaocac"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:text="THỐNG KÊ, BÁO CÁO"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:layout_marginTop="20dp"
        android:text="THOÁT"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>