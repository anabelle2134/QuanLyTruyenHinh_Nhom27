<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="#CCEAF8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txttieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="THÊM CHƯƠNG TRÌNH"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtThemMaCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Chương Trình"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editThemMaCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtThemTenCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Chương Trình"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editThemTenCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtThemMaTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Thể Loại"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editThemMaTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThemCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="THÊM"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HỦY"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>